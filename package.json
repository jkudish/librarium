{
  "name": "librarium",
  "version": "0.1.0",
  "description": "Fan out research queries to multiple search and deep-research APIs in parallel",
  "type": "module",
  "bin": {
    "librarium": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/ tests/",
    "lint:fix": "biome check --write src/ tests/"
  },
  "dependencies": {
    "commander": "^13.0.0",
    "@inquirer/prompts": "^7.0.0",
    "zod": "^3.24.0",
    "p-limit": "^6.0.0",
    "ora": "^8.0.0",
    "strip-ansi": "^7.1.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0",
    "@biomejs/biome": "2.3.14",
    "@types/node": "^22.0.0"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "research",
    "search",
    "deep-research",
    "multi-provider",
    "perplexity",
    "brave",
    "exa",
    "tavily",
    "parallel",
    "cli"
  ],
  "license": "MIT",
  "author": "Joey Kudish",
  "homepage": "https://github.com/jkudish/librarium",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jkudish/librarium.git"
  },
  "bugs": {
    "url": "https://github.com/jkudish/librarium/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
